<div class="vh-100 container d-flex flex-column align-items-center justify-content-center">
  <div class="">
    <%= image_tag "plan-it-4.png", class:"mx-auto d-block my-3" %>
    <h2 class="text-light my-3 text-center fs-5"><%= t('.change_your_password') %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token, class:"border-1 rounded-3 border-light fs-5 py-2 ps-3 pe-4 w-100 text-light" %>

      <div class="field my-3">
        <%= f.label :password, class:"text-start fs-6 fw-bold", t('.new_password') %><br />
        <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
        <% end %>
        <%= f.password_field :password, class:"border-1 rounded-3 border-light fs-5 py-2 ps-3 pe-4 w-100 text-light", autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="field my-3">
        <%= f.label :password_confirmation, class:"text-start fs-6 fw-bold", t('.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, class:"border-1 rounded-3 border-light fs-5 py-2 ps-3 pe-4 w-100 text-light", autocomplete: "new-password" %>
      </div>

      <div class="actions my-3">
        <%= f.submit t('.change_my_password'), class:"btn btn-info fs-5 fw-bold w-100" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

