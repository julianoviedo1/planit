<header>
  <%= render 'shared/navbar' %>
</header>
<div class="bg-success h-100">
  <div class="vh-100 w-50 container d-flex flex-column py-5  bg-white">
    <h5 class="text-dark my-4 text-left fs-5 fw-bold ps-3 pe-4">Tipo de Entrega</h5>
    <%= simple_form_for @order, url: service_orders_path(@service) do |f| %>
      <div class="form-row ">
        <%= f.input :home_delivery, wrapper_html: { class:'border-1 rounded-3 border-dark fs-5 py-2 ps-3 pe-4 w-100 text-dark', autofocus: true } %>
      </div>
      <div class="form-row">
        <%= f.input :address,  selected: current_user.address, wrapper_html: { class:'border-1 rounded-3 border-dark fs-5 py-2 ps-3 pe-4 w-100 text-dark' } %>
      </div>
      <div class="form-row">
        <%= f.input :apartment, wrapper_html: { class:'border-1 rounded-3 border-dark fs-5 py-2 ps-3 pe-4 w-100 text-dark' } %>
      </div>
      <div class="form-row">
        <%= f.input :delivery_date, as: :date, wrapper_html: { class:'border-1 rounded-3 border-dark fs-5 py-2 ps-3 pe-4 w-100 text-dark' } %>
      </div>
      <div class="form-row d-flex">
        <%= f.input :start_time , wrapper_html: { class:"col-12 col-md fs-5 py-2 ps-3 pe-4 text-dark" } %>
        <%= f.input :end_time, wrapper_html: { class:'col-12 col-md border-1 rounded-3 border-dark fs-5 py-2 ps-3 pe-4 text-dark' } %>
      </div>
      <div class="form-row">
        <%= f.input :comments, wrapper_html: { class:'border-1 rounded-3 border-dark fs-5 py-2 ps-3 pe-4 w-100 text-dark' } %>
      </div>
      <div class="form-row d-flex justify-content-center my-2 p-2">
        <%= f.button :submit, class:'col-12 col-md-3 btn btn-info fs-5 fw-bold text-white m-2'%>
        <%= link_to t('devise.shared.links.back'), :back, class:'col-12 col-md-3 btn btn-dark fs-5 fw-bold text-white m-2' %>
      </div>
    <% end %>
  </div>
</div>

<% console %>