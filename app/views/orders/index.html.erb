<header>
  <%= render 'shared/navbar' %>
</header>
<section class="container">>
<h3 class="fw-bold">Mis Compras</h3>
<div class="row">
  <% @orders.each do |order| %>
    <div class="card shadow col-6 col-md-5">
    <div class="card-title">
            <div class="d-flex flex-row">    
            <div class="">
              <%= cl_image_tag order.service.photo.key, class:'rounded icon-background' %>
            </div>
            <div class="ms-2">
              <div class="">
                <h5 class="fs-4 fw-bold m-1"><%= order.service.supplier.name %></h5>
              </div>
                <div class="d-flex flex-row">
                  <i class="<%= order.home_delivery? ? 'fas fa-truck' : 'fas fa-home' %> ms-1 text-info pe-1 my-auto" ></i>
                  <p class="fs-6 m-1 text-dark fw-bold"><%= order.home_delivery? ? 'Entrega a domicilio' : 'Retiro por sucursal' %></p>
                </div>
            </div>
          </div>
          <div class="d-flex flex-row justify-content-between">
            <div class="my-3">
              <h6 class="fs-5 fw-bold m-0 p-0"><%= order.service.name %></h6>
              <h6 class="fs-6 fw-normal m-0 p-0"><%= order.service.description %></h6>
            </div>  
          </div>
    </div>
    <div class="card-body">
    </div>
    </div>
  <% end %>
</div>
</section>