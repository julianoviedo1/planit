<header>
  <%= render "shared/navbar" %>
</header>
<section class="container mt-5 w-75">
  <h6 class="fw-bold letter-spacing my-4"><%= t('activerecord.models.service.other').upcase %></h6>
  <div class="row equal justify-content-center">
  <% @categories.each do |category| %>
    <div class="col-3 col-lg-1 mx-3 d-flex justify-content-center">
      <%= link_to category_path(category), class:'text-decoration-none' do %>
      <div class="border border-1 rounded-circle icon-background shadow-sm d-flex justify-content-center">
        <%= cl_image_tag category.icon.key, class:'m-auto'%>
      </div>
      <p class="fs-6 fw-bold text-center text-danger mt-2 "><%= category.name %></p>
      <% end %>
    </div>
  <% end %>
  </div>
</section>
<section class="container my-5">
  <div class="row d-flex justify-content-around">
    <% @suppliers.each do |supplier| %>
      <div class="col-6 col-md-3 card shadow border border-2 rounded-3 d-flex flex-column">
        <div class="card-title d-flex mt-2">
          <%= cl_image_tag supplier.photo.key, class:' photo-background m-auto rounded-top' %>
        </div>
        <div class="mx-2 mb-1 mt-0">
          <h5 class="fw-bold fs-4 m-0"><%=  supplier.name %></h5>
          <h6 class="fs-6 m-0 mt-1"><%= supplier.offers %></h6>
          <i class=<%= supplier.delivery? ? "fas fa-truck" : "fas fa-house" %> ></i>
          <p class="fs-6"><%= supplier.delivery? ? 'Entrega a domicilio' : 'Retiro por sucursal' %></p>
        </div>
      </div>
    <% end %>
  </div>
</section>